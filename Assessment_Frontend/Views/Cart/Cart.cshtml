@model List<Cart>
<h2>Your Cart</h2>
@foreach (var item in Model)
{
    var product = item.Product;
    var now = DateTime.Now;
    var discounted = product.DiscountStartDate <= now && product.DiscountEndDate >= now;
    var finalPrice = discounted ? product.Price * (1 - (product.DiscountPercentage ?? 0) / 100) : product.Price;

    <div class="border-bottom mb-2">
        <strong>@product.Name</strong> - Quantity: @item.Quantity - Price: $@finalPrice
    </div>
}